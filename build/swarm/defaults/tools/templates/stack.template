    database_console:
        image: migasfree/database_console:{{TAG}}
        environment:
            - TZ={{TZ}}
            - STACK={{STACK}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - DATASHARE_MOUNT_PATH={{DATASHARE_MOUNT_PATH}}
            - PGADMIN_DEFAULT_EMAIL={{EMAIL}}
            - PGADMIN_DEFAULT_PASSWORD_FILE=/run/secrets/{{STACK}}_superadmin_pass
            - PGADMIN_LISTEN_PORT=5050
            - PGADMIN_LISTEN_ADDRESS=0.0.0.0
        deploy:
            replicas: 1
        secrets:
            - source: {{STACK}}_superadmin_pass
        volumes:
#            - database_console:/var/lib/pgadmin
#            - datashare:{{DATASHARE_MOUNT_PATH}}
             - /var/lib/docker/volumes/migasfree-swarm/_data/datashares/{{STACK}}/consoles/database:/var/lib/pgadmin
        depends_on:
            - database
        networks:
            - {{STACK}}_network
            - proxy

    datastore_console:
        image: migasfree/datastore_console:{{TAG}}
        environment:
            - TZ={{TZ}}
            - FQDN={{FQDN}}
            - STACK={{STACK}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - RI_APP_FOLDER_ABSOLUTE_PATH={{DATASHARE_MOUNT_PATH}}/consoles/datastore
            - REDIS_HOST={{REDIS_HOST}}
            - REDIS_PORT={{REDIS_PORT}}
            - REDIS_DB={{REDIS_DB}}
        deploy:
            replicas: 1
        volumes:
            - /var/lib/docker/volumes/migasfree-swarm/_data/datashares/{{STACK}}:{{DATASHARE_MOUNT_PATH}}
        secrets:
            - source: {{STACK}}_superadmin_pass
        depends_on:
            - datastore
        networks:
            - {{STACK}}_network
            - proxy

    datashare_console:
        image: migasfree/datashare_console:{{TAG}}
        environment:
            - TZ={{TZ}}
            - FQDN={{FQDN}}
            - STACK={{STACK}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - DATASHARE_MOUNT_PATH=/srv
            - DATASHARE_FS={{DATASHARE_FS}}
            - HTTPSMODE={{HTTPSMODE}}
        deploy:
            replicas: 1
            restart_policy:
                condition: any
                delay: 5s
                max_attempts: 0
                window: 180s
        volumes:
            - migasfree-swarm:/mnt/cluster
            - /var/lib/docker/volumes/migasfree-swarm/_data/datashares/{{STACK}}:/srv
        secrets:
            - source: {{STACK}}_superadmin_name
            - source: {{STACK}}_superadmin_pass
        networks:
            - {{STACK}}_network
            - proxy

    worker_console:
        image: migasfree/worker_console:{{TAG}}
        environment:
            - TZ={{TZ}}
            - FQDN={{FQDN}}
            - STACK={{STACK}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - DATASHARE_MOUNT_PATH={{DATASHARE_MOUNT_PATH}}
        deploy:
            replicas: 1
            restart_policy:
                condition: any
                delay: 5s
                max_attempts: 0
                window: 180s
        volumes:
            - /var/lib/docker/volumes/migasfree-swarm/_data/datashares/{{STACK}}/consoles/worker:/data
        networks:
            - {{STACK}}_network
            - proxy
        secrets:
            - source: {{STACK}}_superadmin_name
            - source: {{STACK}}_superadmin_pass

{% if GOOGLE_API_KEY %}
    assistant:
        image: migasfree/assistant:{{TAG}}
        environment:
            - TZ={{TZ}}
            - FQDN={{FQDN}}
            - STACK={{STACK}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - GOOGLE_API_KEY={{GOOGLE_API_KEY}}
            - EMAIL={{EMAIL}}

            - OLLAMA_BASE_URL={{OLLAMA_BASE_URL}}
            - OPENWEBUI_BASE_URL=https://assistant.{{FQDN}}

            # Disables network connections for update checks and automatic model downloads.
            - OFFLINE_MODE=True

        deploy:
            replicas: 1
            restart_policy:
                condition: any
                delay: 5s
                max_attempts: 0
                window: 180s
        volumes:
            - /var/lib/docker/volumes/migasfree-swarm/_data/datashares/{{STACK}}/consoles/assistant:/app/backend/data
        secrets:
            - source: {{STACK}}_superadmin_pass
        depends_on:
            - mcp-server
        networks:
            - {{STACK}}_network
            - proxy


    mcp-server:
        image: migasfree/mcp-server:{{TAG}}
        environment:
            - TZ={{TZ}}
            - FQDN={{FQDN}}
            - STACK={{STACK}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - POSTGRES_USER={{SUPERADMIN_NAME}}
            - POSTGRES_HOST={{POSTGRES_HOST}}
            - POSTGRES_PORT={{POSTGRES_PORT}}
            - POSTGRES_DB={{POSTGRES_DB}}
        secrets:
            - source: {{STACK}}_superadmin_pass
        depends_on:
            - core
        deploy:
            replicas: 1
            restart_policy:
                condition: any
                delay: 5s
                max_attempts: 0
                window: 180s
        volumes:
            - /var/lib/docker/volumes/migasfree-swarm/_data/datashares/${STACK}:/mnt/datashare
        networks:
            - {{STACK}}_network
            - proxy


{% endif %}

{% if HTTPSMODE == "auto" %}
    certbot:
        image: migasfree/certbot:{{TAG}}
        environment:
            - TZ={{TZ}}
            - FQDN={{FQDN}}
            - STACK={{STACK}}
            - HTTPSMODE={{HTTPSMODE}}
            - NODE={{NODE}}
            - SERVICE={{SERVICE}}
            - DATASHARE_MOUNT_PATH={{DATASHARE_MOUNT_PATH}}
            - EMAIL={{EMAIL}}
        deploy:
            replicas: 1
            restart_policy:
                condition: any
                delay: 5s
                max_attempts: 0
                window: 180s
            placement:
                constraints:
                    - node.labels.datastore == true
        networks:
            - {{STACK}}_network
            - proxy
        volumes:
            - /var/lib/docker/volumes/migasfree-swarm/_data/certificates:/etc/certificates
{% endif %}


networks:
#    network:
#        driver: overlay
#        attachable: true
#        name: {{STACK}}_network
    {{STACK}}_network:
        external: true
    proxy:
        external: true


secrets:
    {{STACK}}_superadmin_name:
        external: true
    {{STACK}}_superadmin_pass:
        external: true
    {{STACK}}_pms_pass:
        external: true


volumes:
    database:
        driver: local

    datastore:
        driver: local

    migasfree-swarm:
        external: true


